{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "warn", // Avertit si une fonction n'a pas de type de retour explicite
      "@typescript-eslint/explicit-module-boundary-types": "warn", // Avertit si les méthodes et fonctions exportées n'ont pas de type explicite
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 100,
          "semi": true,
          "trailingComma": "es5",
          "arrowParens": "always",
          "tabWidth": 4
        }
      ]
    }
  }
  